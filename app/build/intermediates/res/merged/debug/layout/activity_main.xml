<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.italianfoodquiz.MainActivity">
    <!-- Main layout -->
    <LinearLayout
        android:id="@+id/main_linear_layout"
        style="@style/main_linear_layout">
        <!-- Header image -->
        <ImageView
            style="@style/spaghetti_image"
            android:contentDescription="@string/spaghetti" />
        <!-- Title -->
        <TextView style="@style/title" />
        <!-- Intro 1 -->
        <TextView
            style="@style/intro_1"
            android:text="@string/intro_1" />
        <!-- Intro 2 -->
        <TextView
            style="@style/intro_2"
            android:text="@string/intro_2" />
        <!-- Card 1 -->
        <android.support.v7.widget.CardView style="@style/card">
            <!-- Card layout -->
            <LinearLayout style="@style/card_linear_layout">
                <!-- Question 1 -->
                <TextView
                    style="@style/question"
                    android:text="@string/question_1" />
                <!-- Horizontal line -->
                <View style="@style/horizontal_line" />
                <!-- Answer 1, four horizontal radiobuttons -->
                <RadioGroup
                    android:id="@+id/radio_group_q1"
                    style="@style/radio_group_horizontal">

                    <RadioButton
                        android:id="@+id/eggs"
                        style="@style/q1_radio_buttons"
                        android:text="@string/eggs" />

                    <RadioButton
                        android:id="@+id/cream"
                        style="@style/q1_radio_buttons"
                        android:text="@string/cream" />

                    <RadioButton
                        android:id="@+id/pepper"
                        style="@style/q1_radio_buttons"
                        android:text="@string/pepper" />

                </RadioGroup>

            </LinearLayout> <!-- End card layout 1 -->

        </android.support.v7.widget.CardView> <!-- End card 1 -->
        <!-- Card 2 -->
        <android.support.v7.widget.CardView style="@style/card">
            <!-- Card layout -->
            <LinearLayout style="@style/card_linear_layout">
                <!-- Question 2 -->
                <TextView
                    style="@style/question"
                    android:text="@string/question_2" />

                <ImageView
                    style="@style/images"
                    android:contentDescription="@string/basil"
                    android:src="@drawable/pesto" />
                <!-- Answer 2, edittext-->
                <EditText
                    android:id="@+id/edit_text_q2"
                    style="@style/edit_text"
                    android:hint="@string/green" />

            </LinearLayout> <!-- End card layout 2 -->

        </android.support.v7.widget.CardView> <!-- End card 2 -->
        <!-- Card 3 -->
        <android.support.v7.widget.CardView style="@style/card">
            <!-- Card layout -->
            <LinearLayout style="@style/card_linear_layout">
                <!-- Question 3 -->
                <TextView
                    style="@style/question"
                    android:text="@string/question_3" />
                <!-- Horizontal line -->
                <View style="@style/horizontal_line" />
                <!-- Answer 3, four checkboxes -->
                <!-- First horizontal checkboxes row -->
                <LinearLayout style="@style/answer_3and7">

                    <CheckBox
                        android:id="@+id/answer_3_one"
                        style="@style/answer_3and7_upper_checkboxes"
                        android:text="@string/bolognese_sauce" />

                    <CheckBox
                        android:id="@+id/answer_3_two"
                        style="@style/answer_3and7_upper_checkboxes"
                        android:text="@string/pineapple" />

                </LinearLayout> <!-- End first horizontal checkboxes row -->
                <!-- Second horizontal checkboxes row -->
                <LinearLayout style="@style/answer_3and7">

                    <CheckBox
                        android:id="@+id/answer_3_three"
                        style="@style/answer_3and7_checkboxes"
                        android:text="@string/chicken" />

                    <CheckBox
                        android:id="@+id/answer_3_four"
                        style="@style/answer_3and7_checkboxes"
                        android:text="@string/ketchup" />

                </LinearLayout> <!-- End second horizontal checkboxes lrow -->

            </LinearLayout> <!-- End card layout 3 -->

        </android.support.v7.widget.CardView> <!-- End card 3 -->
        <!-- Card 4 -->
        <android.support.v7.widget.CardView style="@style/card">
            <!-- Card layout -->
            <LinearLayout style="@style/card_linear_layout">
                <!-- Question 4 -->
                <TextView
                    style="@style/question"
                    android:text="@string/question_4" />
                <!-- Horizontal line -->
                <View style="@style/horizontal_line" />
                <!-- Answer 4, two radiobuttons-->
                <RadioGroup
                    android:id="@+id/radio_group_q4"
                    style="@style/radio_group_horizontal">

                    <RadioButton
                        android:id="@+id/true_value_q4"
                        style="@style/answer_4and6and8_radio_button"
                        android:text="@string/true_value" />

                    <RadioButton
                        style="@style/answer_4and6and8_radio_button"
                        android:text="@string/false_value" />

                </RadioGroup>

            </LinearLayout> <!-- End card layout 4 -->

        </android.support.v7.widget.CardView> <!-- End card 4 -->
        <!-- Card 5 -->
        <android.support.v7.widget.CardView style="@style/card">
            <!-- Card layout -->
            <LinearLayout style="@style/card_linear_layout">
                <!-- Question 5 -->
                <TextView
                    style="@style/question"
                    android:text="@string/question_5" />

                <ImageView
                    style="@style/images"
                    android:contentDescription="@string/cannoli"
                    android:src="@drawable/cannoli" />
                <!-- Answer 5, edittext -->
                <EditText
                    android:id="@+id/answer_5"
                    style="@style/edit_text"
                    android:hint="@string/from_sicily" />

            </LinearLayout> <!-- End card layout 5 -->

        </android.support.v7.widget.CardView> <!-- End card 5 -->
        <!-- Card 6 -->
        <android.support.v7.widget.CardView style="@style/card">
            <!-- Card layout -->
            <LinearLayout style="@style/card_linear_layout">
                <!-- Question 6 -->
                <TextView
                    style="@style/question"
                    android:text="@string/question_6" />

                <ImageView
                    style="@style/images"
                    android:contentDescription="@string/pizza"
                    android:src="@drawable/pizza" />
                <!-- Answer 6, four horizontal radiobuttons -->
                <RadioGroup
                    android:id="@+id/radio_group_q6"
                    style="@style/radio_group_horizontal">

                    <RadioButton
                        style="@style/answer_4and6and8_radio_button"
                        android:text="@string/_1675" />

                    <RadioButton
                        android:id="@+id/true_value_q6"
                        style="@style/answer_4and6and8_radio_button"
                        android:text="@string/_1889" />

                    <RadioButton
                        style="@style/answer_4and6and8_radio_button"
                        android:text="@string/_1921" />

                    <RadioButton
                        style="@style/answer_4and6and8_radio_button"
                        android:text="@string/_1742" />

                </RadioGroup>

            </LinearLayout> <!-- End card layout 6 -->

        </android.support.v7.widget.CardView> <!-- End card 6 -->
        <!-- Card 7 -->
        <android.support.v7.widget.CardView style="@style/card">
            <!-- Card layout -->
            <LinearLayout style="@style/card_linear_layout">
                <!-- Question 7 -->
                <TextView
                    style="@style/question"
                    android:text="@string/question_7" />
                <!-- Horizontal line -->
                <View style="@style/horizontal_line" />
                <!-- Answer 7, four checkboxes in two horizontal rows -->
                <!-- First row, two checkboxes -->
                <LinearLayout style="@style/answer_3and7">

                    <CheckBox
                        android:id="@+id/answer_7_one"
                        style="@style/answer_3and7_upper_checkboxes"
                        android:text="@string/ribollita" />

                    <CheckBox
                        android:id="@+id/answer_7_two"
                        style="@style/answer_3and7_upper_checkboxes"
                        android:text="@string/tortellini" />

                </LinearLayout> <!-- End first checkboxes row -->
                <!-- Second row, two checkboxes -->
                <LinearLayout style="@style/answer_3and7">

                    <CheckBox
                        android:id="@+id/answer_7_three"
                        style="@style/answer_3and7_checkboxes"
                        android:text="@string/amatriciana" />

                    <CheckBox
                        android:id="@+id/answer_7_four"
                        style="@style/answer_3and7_checkboxes"
                        android:text="@string/panzanella" />

                </LinearLayout> <!-- End second checkboxes row -->

            </LinearLayout> <!-- End card layout 7 -->

        </android.support.v7.widget.CardView> <!-- End card 7 -->
        <!-- Card 8 -->
        <android.support.v7.widget.CardView style="@style/card">
            <!-- Card layout -->
            <LinearLayout style="@style/card_linear_layout">
                <!-- Question 8 -->
                <TextView
                    style="@style/question"
                    android:text="@string/question_8" />

                <ImageView
                    style="@style/images"
                    android:contentDescription="@string/pandoro"
                    android:src="@drawable/pandoro" />
                <!-- Answer 8,  two horizontal radiobuttons-->
                <RadioGroup
                    android:id="@+id/radio_group_q8"
                    style="@style/radio_group_horizontal">

                    <RadioButton
                        android:id="@+id/true_value_q8"
                        style="@style/answer_4and6and8_radio_button"
                        android:text="@string/pandoro" />

                    <RadioButton
                        style="@style/answer_4and6and8_radio_button"
                        android:text="@string/panettone" />

                </RadioGroup>

            </LinearLayout> <!-- End card layout 8 -->

        </android.support.v7.widget.CardView> <!-- End card 8 -->
        <!-- Card 9 -->
        <android.support.v7.widget.CardView style="@style/card">
            <!-- Card layout -->
            <LinearLayout style="@style/card_linear_layout">
                <!-- Question 9 -->
                <TextView
                    style="@style/question"
                    android:text="@string/question_9" />

                <View style="@style/horizontal_line" />
                <!-- Answer 9, four vertical radiobuttons -->
                <RadioGroup
                    android:id="@+id/radio_group_q9"
                    style="@style/radio_group_vertical">

                    <RadioButton
                        style="@style/answer_9_radio_button"
                        android:text="@string/recipe1" />

                    <RadioButton
                        style="@style/answer_9_radio_button"
                        android:text="@string/recipe2" />

                    <RadioButton
                        android:id="@+id/recipe3"
                        style="@style/answer_9_radio_button"
                        android:text="@string/recipe3" />

                    <RadioButton
                        style="@style/answer_9_radio_button"
                        android:text="@string/recipe4" />

                </RadioGroup>

            </LinearLayout> <!-- End card layout 9 -->

        </android.support.v7.widget.CardView> <!-- End card 9 -->
        <!-- Card 10 -->
        <android.support.v7.widget.CardView style="@style/card">
            <!-- Card layout -->
            <LinearLayout style="@style/card_linear_layout">
                <!-- Question 10 -->
                <TextView
                    style="@style/question"
                    android:text="@string/question_10" />

                <ImageView
                    style="@style/images"
                    android:contentDescription="@string/orecchiette"
                    android:src="@drawable/orecchiette" />
                <!-- Answer 10, edittext -->
                <EditText
                    android:id="@+id/answer_10"
                    style="@style/edit_text"
                    android:hint="@string/ears" />

            </LinearLayout> <!-- End card layout 10 -->

        </android.support.v7.widget.CardView> <!-- End card 10 -->
        <!-- Submit button -->
        <Button
            android:id="@+id/submit_button"
            style="@style/button"
            android:onClick="displayScore"
            android:text="@string/submit_button" />
        <!-- Open browser button -->
        <Button
            style="@style/open_browser_button"
            android:onClick="openBrowser"
            android:text="@string/open_browser_button" />
        <!-- Footer image -->
        <ImageView
            style="@style/spaghetti_image"
            android:contentDescription="@string/spaghetti" />

    </LinearLayout> <!-- End main layout -->

</ScrollView>