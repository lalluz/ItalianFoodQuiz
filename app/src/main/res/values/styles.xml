<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Main layout in ScrollView -->
    <style name="main_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/main_bg</item>
    </style>
    <!-- Card -->
    <style name="card" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">@dimen/main_margin</item>
        <item name="android:layout_marginLeft">@dimen/main_margin</item>
        <item name="android:layout_marginRight">@dimen/main_margin</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
    </style>
    <!-- Card inner layout -->
    <style name="card_linear_layout" parent="main_linear_layout">
        <item name="android:background">@android:color/white</item>
    </style>
    <!-- Question -->
    <style name="question">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/question_text</item>
    </style>
    <!-- Horizontal line long -->
    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">@dimen/main_margin</item>
        <item name="android:layout_marginRight">@dimen/main_margin</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <!-- Horizontal line short -->
    <style name="short_horizontal_line" parent="horizontal_line">
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
    </style>
    <!-- Header and footer image -->
    <style name="spaghetti_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_small</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/spaghetti</item>
    </style>
    <!-- Image -->
    <style name="images">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_big</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <!-- Title -->
    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/main_margin</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Intro 1 -->
    <style name="intro_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textSize">@dimen/intro_text</item>
    </style>
    <!-- Intro 2 -->
    <style name="intro_2" parent="intro_1">
        <item name="android:layout_marginBottom">@dimen/main_margin</item>
    </style>
    <!-- RadioGroup horizontal -->
    <style name="radio_group_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/main_margin</item>
        <item name="android:layout_marginBottom">@dimen/main_margin</item>
    </style>
    <!-- RadioButtons answer 1 -->
    <style name="q1_radio_buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- Answer EditText -->
    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <!-- Answer 3 and 7 Layout -->
    <style name="answer_3and7">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>
    <!-- Answer 3 and 7 CheckBoxes -->
    <style name="answer_3and7_checkboxes">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- Answer 3 and 7 upper CheckBoxes -->
    <style name="answer_3and7_upper_checkboxes" parent="answer_3and7_checkboxes">
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <!-- Answer 4 and 6 and 8 RadioButtons -->
    <style name="answer_4and6and8_radio_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/main_margin</item>
        <item name="android:layout_marginBottom">@dimen/main_margin</item>
    </style>
    <!-- Answer 9 RadioGroup vertical -->
    <style name="radio_group_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/main_margin</item>
        <item name="android:layout_marginBottom">@dimen/main_margin</item>
    </style>
    <!-- Answer 9 RadioButtons -->
    <style name="answer_9_radio_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/main_margin</item>
    </style>
    <!-- Buttons: submit, retake -->
    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/main_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/intro_text</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Button open_browser -->
    <style name="open_browser_button" parent="button">
        <item name="android:padding">@dimen/normal_padding</item>
    </style>

</resources>
